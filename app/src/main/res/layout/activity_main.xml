<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".main.presentation.activities.MainActivity"
    android:padding="20dp"
    android:background="@color/spa_background_color"
    >


    <TextView
        android:id="@+id/tv_add_id"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/add_id"
        android:textSize="20sp"
        android:layout_marginTop="40dp"
        android:paddingTop="40dp"
        android:paddingBottom="20dp"
        android:textStyle="bold"
        android:textColor="@color/spa_black"
        tools:ignore="MissingConstraints" />
    <TextView
        android:id="@+id/tv_username"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/username"
        app:layout_constraintTop_toBottomOf="@id/tv_add_id"
        android:textColor="@color/spa_red_text"
        android:paddingVertical="3dp"
        app:layout_constraintStart_toStartOf="@+id/et_username"

        />

    <EditText
        android:id="@id/et_username"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_username"
        android:hint="@string/username"
        android:backgroundTint="@color/spa_red_text"
        android:inputType="text"
        android:autofillHints="@string/username"
        />

    <TextView
        android:id="@+id/tv_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/password"
        app:layout_constraintTop_toBottomOf="@id/et_username"
        android:textColor="@color/spa_red_text"
        android:paddingVertical="3dp"
        app:layout_constraintStart_toStartOf="@+id/et_password"
        />

    <EditText
        android:id="@id/et_password"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_password"
        android:hint="@string/password"
        android:backgroundTint="@color/spa_red_text"
        android:inputType="textPassword"
        android:autofillHints="@string/password"
        />

    <TextView
        android:id="@+id/tv_add_rute"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/add_rute"
        android:textColor="@color/spa_red_text"
        android:paddingVertical="3dp"
        app:layout_constraintTop_toBottomOf="@id/et_password"
        app:layout_constraintStart_toStartOf="@+id/et_add_rute"
        />
    <EditText
        android:id="@id/et_add_rute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/tv_add_rute"
        android:hint="@string/add_rute"
        android:backgroundTint="@color/spa_red_text"
        android:inputType="text"
        android:autofillHints="@string/add_rute"
        />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/btn_Login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/et_add_rute"
        android:text="@string/login"
        android:textColor="@color/spa_white"
        android:layout_marginTop="30dp"
        android:background="@drawable/button_circule"


    />

</androidx.constraintlayout.widget.ConstraintLayout>